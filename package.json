{
  "name": "iduej-launcher",
  "description": "launcher",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "clean": "rimraf dist out",
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev --turbopack",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dist": "npm run dist:win && npm run dist:mac && npm run dist:linux",
    "build": "next build",
    "start": "next start",
    "start:electron": "cross-env NODE_ENV=production electron .",
    "lint": "eslint",
    "dist:win": "electron-builder --win --x64 --publish always",
    "dist:mac": "electron-builder --mac --x64 --publish always",
    "dist:linux": "electron-builder --linux --x64 --publish always",
    "build:all": "npm run clean && npm run build && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KangerTechx/iduej-launcher.git"
  },
  "build": {
    "appId": "com.kangertechx.iduejlauncher",
    "productName": "Iduej",
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "electron/resources"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "resources/icon.ico",
      "category": "Utility"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "owner": "KangerTechx",
      "repo": "iduej-launcher"
    }
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "@remixicon/react": "^4.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "swiper": "^12.0.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
